<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo">


    <!-- Continúa con los botones y otros elementos, ajustando las restricciones según sea necesario -->

    <Button
        android:id="@+id/buttonBeforeAdopt4"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#ED8D8D"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBeforeAdopt3" />

    <Button
        android:id="@+id/buttonBeforeAdopt3"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ED8D8D"
        android:text="He perdido una mascota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBeforeAdopt2" />

    <Button
        android:id="@+id/buttonBeforeAdopt2"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ED8D8D"
        android:text="Adoptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBeforeAdopt" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adoptare"
        android:textColor="#FAF8F8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonBeforeAdopt"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ED8D8D"
        android:text="Antes de adoptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/gate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="No tienes una cuenta? Registrate aqui"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBeforeAdopt4" />

    <!-- Agrega más botones y elementos aquí, asegurándote de definir las restricciones para posicionarlos correctamente -->

</androidx.constraintlayout.widget.ConstraintLayout>
